
@{
    ViewBag.Title = "Customer Details";
    ViewBag.SubTitle = "Team Map";
}


@section Menu {
    @Scripts.Render("~/Scripts/Bundle/Customer/Customer/menu")
}
@Styles.Render("~/AdminLTE/Bundle/plugins/daterangepicker/css")
@Styles.Render("~/AdminLTE/Bundle/plugins/colorpicker/css")
@Styles.Render("~/AdminLTE/Bundle/plugins/timepicker/css")
@Styles.Render("~/AdminLTE/Bundle/plugins/select2/css")
@Styles.Render("~/AdminLTE/Bundle/dist/css")
@Styles.Render("~/AdminLTE/Bundle/dist/css/skins")
@Styles.Render("~/Styles/Bundle/Elements/Modals")
<style>
    .error {
  color: red
}
</style>
<div class="box box-default">
    <div class="box-header with-border">
        @*<h3 class="box-title">Select2</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
            </div>*@
    </div>
    <form id="form1" name="form1">
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Customer code<font color="red">*</font></label>
                            <input type="text" class="form-control" id="CustomerCode" tabindex="1" name="CustomerCode" value="@Model.CustomerDetails.CustomerCode" placeholder="Enter customer code">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Latitude<font color="red">*</font></label>
                            <input type="text" class="form-control" id="Lat" tabindex="3" name="Lat" value="@Model.CustomerDetails.Lat" placeholder="Enter latitude">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Contact name</label>
                            <input type="text" class="form-control" id="FirstName" tabindex="5" name="FirstName" value="@Model.CustomerDetails.FirstName" placeholder="Enter first name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Address1</label>
                            <input type="text" class="form-control" id="Address1" tabindex="7" name="Address1" value="@Model.CustomerDetails.Address1" placeholder="Enter address1">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">City</label>
                            <input type="text" class="form-control" id="City" tabindex="9" name="City" value="@Model.CustomerDetails.City" placeholder="Enter city">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Landline</label>
                            <input type="text" class="form-control" id="Phone1" tabindex="11" name="Phone1" value="@Model.CustomerDetails.Phone1" placeholder="Enter phone1">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="text" class="form-control" id="Email" tabindex="13" name="Email" value="@Model.CustomerDetails.Email" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <select id="Archive" name="Archive" class="form-control select2" value="@Model.CustomerDetails.Archive" style="width: 100%;">
                            <option value="A">Active</option>
                            <option value="N">Archived</option>
                        </select>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Customer name<font color="red">*</font></label>
                            <input type="text" class="form-control" id="OfficeName" tabindex="2" name="OfficeName" value="@Model.CustomerDetails.OfficeName" placeholder="Enter customer name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Longitude<font color="red">*</font></label>
                            <input type="text" class="form-control" id="Lng" tabindex="4" name="Lng" value="@Model.CustomerDetails.Lng" placeholder="Enter longitude">
                        </div>
                    </div>
                    @if (User.IsInRole("SUPER"))
                    {
                        <div class="form-group">
                            <div class="form-group">
                                <label>Company</label>
                                <select id="Company" class="form-control select2" tabindex="6" value="@Model.CustomerDetails.CompanyId" style="width: 100%;"></select>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <div class="form-group">
                                <label>Company</label>
                                <select id="Company" class="form-control select2" disabled tabindex="8" value="@Model.CustomerDetails.CompanyId" style="width: 100%;"></select>
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Address2</label>
                            <input type="text" class="form-control" id="Address2" tabindex="10" name="Address2" value="@Model.CustomerDetails.Address2" placeholder="Enter address2">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">PostCode/Zip</label>
                            <input type="text" class="form-control" id="ZipCode" tabindex="12" name="ZipCode" value="@Model.CustomerDetails.ZipCode" placeholder="Enter Postcode/Zip">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Cellphone</label>
                            <input type="text" class="form-control" id="Phone2" tabindex="14" name="Phone2" value="@Model.CustomerDetails.Phone2" placeholder="Enter phone2">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Website</label>
                            <input type="text" class="form-control" id="Website" tabindex="16" name="Website" value="@Model.CustomerDetails.Website" placeholder="Enter website">
                        </div>
                    </div>
                   

                </div>
            </div>
        </div>
    </form>
    <div class="box-footer">
        <button id="First"class="btn btn-primary">Save</button>
        <button id="Second" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Save</button>
    </div>
    @*<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
            Launch demo modal
        </button>*@

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body">
                    Save changes?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="savebtn" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/AdminLTE/Bundle/plugins/select2/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/momentjs/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/colorpicker/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/timepicker/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/icheck/js")
    @Scripts.Render("~/Scripts/Bundle/Company/Advanced")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/jquery-validate/js")
    <script type="text/javascript">
        $('#First').click(function(){
            if( !$("#form1").valid())
            {   
                return
            }
            else{
                $('#Second').click()
            }
        })

            var jsontext = '@Html.Raw(Json.Encode(Model.CompanyList))';
            var data = JSON.parse(jsontext);
            $('#Company').select2({
                data: data
            })
            $("#Company").val("@Model.CustomerDetails.CompanyId").trigger("change");

            $(document).ready(function () {
                // 1. prepare the validation rules and messages.
                $('#Archive').select2({

                })
                $("#Archive").val("@Model.CustomerDetails.Archive").trigger("change");
                $('#Second').hide();
                $("#form1").validate({
                    rules: {
                        CustomerCode: {
                            required: true
                        },
                        Company: {
                            required: true
                        },
                        Email: {
                            email: true
                        },
                        Lat:{
                            required:true
                        },
                        Lng:{
                            required:true
                        },
                        OfficeName:{
                            required:true
                        },
                    },
                    messages: {
                        CustomerCode: "Customer Code is required",
                        Company: "Company is required",
                        Email:"Please enter a valid email address",
                        Lat:"Latitude is required",
                        Lng:"Longitude is required",
                        OfficeName:"Customer name is required"
                    }
                });
                $('#savebtn').click(function(){
                    if( !$("#form1").valid())
                    {   
                        $('#myModal').modal('hide');
                        return
                    }
                    var data={ Id : @Model.CustomerDetails.Id,
                        Address1 : $('#Address1').val(),
                        Address2 : $('#Address2').val(),
                        CustomerCode: $('#CustomerCode').val(),
                        FirstName : $('#FirstName').val(),
                        LastName : $('#LastName').val(),
                        CompanyId:$('#Company').val(),
                        Email : $('#Email').val(),
                        City : $('#City').val(),
                        Lat : $('#Lat').val(),
                        Lng : $('#Lng').val(),
                        Phone1 : $('#Phone1').val(),
                        Phone2 : $('#Phone2').val(),
                        OfficeName : $('#OfficeName').val(),
                        Website : $('#Website').val(),
                        ZipCode : $('#ZipCode').val(),
                        Archive:$('#Archive').val()}
                    var url='@Url.Action("SaveDetails", "Customer")';
                    $.ajax({
                        type:"POST",
                        url:url,
                        data: JSON.stringify(data) ,
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function () {
                            window.location.href= '@Url.Action("CustomerReport", "Customer")';
                        },
                        error: function () {
                            alert("Error while inserting data");
                        }
                    })
                });
            });
    </script>

}




