    <form id="form1" name="form1">
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Title</label>
                            <input type="text" class="form-control required" id="Title" tabindex="1" name="Title" value="@Model.Title" placeholder="Enter title">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Address1</label>
                            <input type="text" class="form-control" id="Address1" name="Address1" tabindex="3" value="@Model.Address1" placeholder="Enter address1">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Phone 1</label>
                            <input type="text" class="form-control" id="Phone1" name="Phone1" tabindex="5" value="@Model.Phone1" placeholder="Enter phone1">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="text" class="form-control" id="Email" name="Email" tabindex="7" value="@Model.Email" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Zip Code</label>
                            <input type="text" class="form-control" id="ZipCode" name="ZipCode" tabindex="9" value="@Model.ZipCode" placeholder="Enter zipCode">
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Contact Name</label>
                            <input type="text" class="form-control" id="ContactName" tabindex="2" name="ContactName" value="@Model.ContactName" placeholder="Enter contact name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Address2</label>
                            <input type="text" class="form-control" id="Address2" tabindex="4" name="Address2" value="@Model.Address2" placeholder="Enter address2">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Phone2</label>
                            <input type="text" class="form-control" id="Phone2" tabindex="6" name="Phone2" value="@Model.Phone2" placeholder="Enter phone2">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Website</label>
                            <input type="text" class="form-control" id="Website" tabindex="8" name="Website" value="@Model.Website" placeholder="Enter website">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
        <div class="box-footer">
            <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">Save</button>
        </div>
        
        @*<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                Launch demo modal
            </button>*@

        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel"></h4>
                    </div>
                    <div class="modal-body">
                        Save changes?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" id="savebtn" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
</div>


@section Scripts {
    @Scripts.Render("~/AdminLTE/Bundle/plugins/select2/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/input-mask/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/momentjs/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/daterangepicker/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/colorpicker/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/timepicker/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/icheck/js")
    @Scripts.Render("~/Scripts/Bundle/Company/Advanced")
@Scripts.Render("~/AdminLTE/Bundle/plugins/jquery-validate/js")
<script type="text/javascript">


    $(document).ready(function () {
        // 1. prepare the validation rules and messages.
        
        $("#form1").validate({
            rules: {
                Title: {
                    required: true
                }
            },
            messages: {
                Title: "Required Field"
            }
        });
        // 3. Set the click event to do the validation
        $('#savebtn').click(function(){
            if( !$("#form1").valid())
            {
                return
            }
            var data={ Id : @Model.Id,
                Address1 : $('#Address1').val(),
                Address2 : $('#Address2').val(),
                ContactName : $('#ContactName').val(),
                Email : $('#Email').val(),
                Lat : $('#Lat').val(),
                Lng : $('#Lng').val(),
                Phone1 : $('#Phone1').val(),
                Phone2 : $('#Phone2').val(),
                Title : $('#Title').val(),
                Website : $('#Website').val(),
                ZipCode : $('#ZipCode').val()}
            var url='@Url.Action("SaveDetails", "Company")';
            $.ajax({
                type:"POST",
                url:url,
                data: JSON.stringify(data) ,  
                dataType: "json",  
                contentType: "application/json; charset=utf-8",  
                success: function () {  
                    window.location.href= '@Url.Action("CompanyReport", "Company")';
                },  
                error: function () {  
                    alert("Error while inserting data");  
                }  
            })
        });
    });



