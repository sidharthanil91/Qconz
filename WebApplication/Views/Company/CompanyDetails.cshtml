    <script type="text/javascript">


        $(document).ready(function () {
            // 1. prepare the validation rules and messages.
            $('#Archive').select2({

            })
            $("#Archive").val("@Model.Archive").trigger("change");
            function readURL(input) {

                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function(e) {
                        $('#blah').attr('src', e.target.result);
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }

            $("#imgInp").change(function() {
                readURL(this);
            });

            $("#form1").validate({
                rules: {
                    Title: {
                        required: true
                    },
                    Email: {
                        email: true
                    },
                },
                messages: {
                    Title: "Title is required",
                    Email:"Please enter a valid email address"
                }
            });
            // 3. Set the click event to do the validation
            $('#savebtn').click(function(){
                if( !$("#form1").valid())
                {
                    return
                }
                var fileList = document.getElementById("imgInp").files;
                var fileReader = new FileReader();
                if (fileReader && fileList && fileList.length) {
                    fileReader.readAsArrayBuffer(fileList[0]);
                    fileReader.onload = function () {
                        var imageData = fileReader.result;
                    };
                }
                var data = new FormData();
                var files = $("#imgInp").get(0).files;
                if (files.length > 0) {
                    data.append("file", files[0]);
                }
                data.append("Id",@Model.Id)
                data.append("Address1",$('#Address1').val())
                data.append("Address2",$('#Address2').val())
                data.append("ContactName",$('#ContactName').val())
                data.append("Email",$('#Email').val())
                data.append("Image",$('#blah').attr('src'))
                data.append("City",$('#City').val())
                data.append("Lat",$('#Lat').val())
                data.append("Lng",$('#Lng').val())
                data.append("Phone1",$('#Phone1').val())
                data.append("Phone2",$('#Phone2').val())
                data.append("Title",$('#Title').val())
                data.append("Website",$('#Website').val())
                data.append("ZipCode",$('#ZipCode').val())
                data.append("Archive",$('#Archive').val())
                var url='@Url.Action("SaveDetails", "Company")';
                $.ajax({
                    type:"POST",
                    url:url,
                    data: data ,
                    processData: false,
                    contentType: false,
                    success: function (success) {
                        if(!success)
                        {
                            alert("Image should be 500*500 and a supported file type");
                            return;
                        }
                            else{
                                window.location.href= '@Url.Action("CompanyReport", "Company")';
                            }
                    },
                    error: function () {
                        alert("Error while inserting data");
                    }
                })
            });
        });



