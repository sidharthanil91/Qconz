            </div>*@
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Team name</label>
                        <input type="text" class="form-control" id="TeamName" name="TeamName" value="@Model.SingleTeam.TeamName" placeholder="Enter team name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" rows="3" value="@Model.SingleTeam.Teamdesc" placeholder="Enter description"></textarea>
                    </div>
                </div>
              
            </div>
            <div class="col-md-6">
                @*<div class="form-group">
                    <div class="form-group">
