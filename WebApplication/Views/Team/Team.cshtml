
@{
    ViewBag.Title = "Groups";
    ViewBag.SubTitle = "Team Map";
}


@section Menu {
    @Scripts.Render("~/Scripts/Bundle/Team/Team/menu")
}

@Styles.Render("~/AdminLTE/Bundle/plugins/datatables/css")

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Group List</h3>
            </div>
            <div class="box-body">
                <button style="width:35px" onclick="window.location.href= '@Url.Action("TeamDetails", "Team", new { id = 0 })'" type="button" class="btn btn-block btn-primary"><span class="glyphicon glyphicon-plus"></span></button>
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Group name</th>
                            <th>Company</th>
                            <th></th>
                            @*<th></th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @item.TeamName
                                </td>
                                <td>
                                    @item.CompanyName
                                </td>
                                <td width="5%">
                                    <button type="button" onclick="window.location.href= '@Url.Action("TeamDetails", "Team", new { id = item.Id })'" class="btn btn-block btn-primary"><span class="glyphicon glyphicon-edit"></span></button>
                                </td>
                                @*<td width="5%">
                                        <button type="button" class="btn btn-block btn-primary"><span class="glyphicon glyphicon-trash"></span></button>
                                    </td>*@
                            </tr>

                        }
                    </tbody>
                    @*<tfoot>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                                <th>Engine version</th>
                                <th>CSS grade</th>
                            </tr>
                        </tfoot>*@
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @*@Scripts.Render("~/AdminLTE/Bundle/plugins/datatables/js")*@
    <script src="~/AdminLTE/plugins/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables/js/dataTables.bootstrap.min.js"></script>
    @Scripts.Render("~/Scripts/Bundle/Team/Data")
}
