
@{
    ViewBag.Title = "User";
}

@section Menu {
    @Scripts.Render("~/Scripts/User/User/menu")
}

@Styles.Render("~/AdminLTE/plugins/datatables/css")

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">User List</h3>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Company</th>
                            <th>Contact Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.users)
                        {

                            <tr>
                                <td>
                                    @item.FirstName
                                </td>
                                <td>
                                    @item.SurName
                                </td>
                                <td>
                                    @item.UserType
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.Cellphone
                                </td>
                                <td width="5%">
                                    <button type="button" onclick="window.location.href= '@Url.Action("UserDetails", "User", new { id = item.Id })'" class="btn btn-block btn-primary"><span class="glyphicon glyphicon-edit"></span></button>
                                </td>
                                <td width="5%">
                                    <button type="button" class="btn btn-block btn-primary"><span class="glyphicon glyphicon-trash"></span></button>
                                </td>
                            </tr>

                        }
                    </tbody>
                    @*<tfoot>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                                <th>Engine version</th>
                                <th>CSS grade</th>
                            </tr>
                        </tfoot>*@
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
    @Scripts.Render("~/Scripts/User/Data")
}






